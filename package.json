{
  "name": "fastpw2",
  "version": "1.5.5",
  "description": "A lightweight, local-first password manager. AES-256 encryption. No cloud storage. No telemetry.",
  "main": "main.js",
  "scripts": {
    "start": "FASTPW2_ENABLE_CACHE=1 electron .",
    "dev": "FASTPW2_ENABLE_CACHE=1 electron .",
    "dev:renderer": "cd renderer && vite --port 5175",
    "dev:electron": "wait-on http://localhost:5175 && FASTPW2_RENDERER_DEV=1 FASTPW2_RENDERER_URL=http://localhost:5175 NODE_ENV=development FASTPW2_ENABLE_CACHE=1 electron .",
    "dev:all": "concurrently -k -n vite,electron -c blue,green \"npm:dev:renderer\" \"npm:dev:electron\"",
    "build:renderer": "cd renderer && npm run build",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder",
    "dist": "electron-builder -mwl",
    "release": "electron-builder --publish onTagOrDraft",
    "webdev": "vite --port 5173",
    "webbuild": "vite build"
  },
  "author": "barturba",
  "license": "MIT",
  "build": {
    "appId": "com.barturba.fastpw2",
    "productName": "FastPW2",
    "files": [
      "**/*",
      "!**/.git/**",
      "!**/.github/**",
      "!**/node_modules/.cache/**"
    ],
    "asar": true,
    "publish": [
      "github"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${os}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "vite": "^6.3.5",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.1.1",
    "keytar": "^7.9.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "type": "commonjs"
}
